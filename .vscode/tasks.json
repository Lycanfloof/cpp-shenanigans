{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "G++ 11.3.0",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-std=c++23",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${fileDirname}\\main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}